<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:id="@+id/mainView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="dodaj"
            android:id="@+id/btn_dodaj"
            android:layout_weight="1"
            android:layout_margin="2dp"/>
<!--        <Button-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:text="wydaj"-->
<!--            android:id="@+id/btn_wydaj"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_margin="2dp"/>-->
    </LinearLayout>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/pfhbipm_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="logi #TODO"
            android:id="@+id/btn_logs"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="drukarki #TODO"
            android:id="@+id/btn_drukarki"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="stany magazynowe"
            android:id="@+id/btn_stack"/>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>