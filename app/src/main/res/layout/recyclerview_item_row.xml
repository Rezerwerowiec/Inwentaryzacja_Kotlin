<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/itemType"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:background="#7733BB"
        android:textAlignment="gravity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name of item" />

    <TextView
        android:id="@+id/itemQuantity"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="#AACCAA"
        android:gravity="center"
        tools:text="Quantities"
        android:textAlignment="gravity"
        app:layout_constraintStart_toEndOf="@id/itemType"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="370dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/itemType"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background = "#00FF00"
        android:id="@+id/isEnough"
        />


</androidx.constraintlayout.widget.ConstraintLayout>