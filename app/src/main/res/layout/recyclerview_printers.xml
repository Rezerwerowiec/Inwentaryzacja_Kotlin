<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/printerClickable">

    <ImageView
        android:id="@+id/printerImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:background="#7733BB"
        android:textAlignment="gravity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/pfhbipm_logo"/>

    <TextView
        android:id="@+id/printerName"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="#AACCAA"
        android:gravity="center"
        tools:text="printer name"
        android:textAlignment="gravity"
        app:layout_constraintStart_toEndOf="@id/printerImage"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>